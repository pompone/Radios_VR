{
  "name": "Radios de Villa Regina",
  "short_name": "RadiosVR",
  "description": "Radio web con emisoras locales de Villa Regina",
  "id": "/Radios_VR/",
  "start_url": "/Radios_VR/",
  "scope": "/Radios_VR/",
  "display": "standalone",
  "orientation": "portrait",
  "background_color": "#cccccc",
  "theme_color": "#333333",
  "lang": "es",
  "dir": "ltr",

  "icons": [
    { "src": "./icon-192.png", "sizes": "192x192", "type": "image/png" },
    { "src": "./icon-512.png", "sizes": "512x512", "type": "image/png" },
    { "src": "./icono.ico",   "sizes": "16x16 32x32 48x48", "type": "image/x-icon" }
  ],

  "screenshots": [
    { "src": "./screenshot-wide.png",   "sizes": "1280x720",  "type": "image/png", "form_factor": "wide" },
    { "src": "./screenshot-narrow.png", "sizes": "750x1334",  "type": "image/png", "form_factor": "narrow" }
  ],

  "display_override": ["standalone"],

  "file_handlers": [
    {
      "action": "/Radios_VR/",
      "accept": { "audio/*": [".mp3", ".wav"] }
    }
  ],

  "handle_links": "preferred",

  "protocol_handlers": [
    {
      "protocol": "web+radio",
      "url": "https://radiosvr.com/?stream=%s"
    }
  ],

  "shortcuts": [
    {
      "name": "Inicio",
      "url": "/Radios_VR/",
      "description": "Ir a la p√°gina principal",
      "icons": [{ "src": "./icon-192.png", "sizes": "192x192", "type": "image/png" }]
    }
  ],

  "share_target": {
    "action": "/Radios_VR/",
    "method": "GET",
    "params": { "title": "title", "text": "text", "url": "url" }
  }
